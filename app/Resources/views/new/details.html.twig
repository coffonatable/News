{% extends 'base.html.twig' %}
{% block title %}
    details
{% endblock title %}
{% block body %}
    <a class="btn btn-default" href="/news">Back to News</a>
    <hr>
    <h2 class="page-header">{{ news.name }}</h2>
    <ul class="list-gorup">
        <li class="list-group-item">Category: {{ news.category }}</li>
        <li class="list-group-item">Priority: {{ news.priority }}</li>
        <li class="list-group-item">Date: <strong>{{ news.dueDate|date('F j, Y, g:i a') }}</strong</li>

    </ul>

    <p><h4>Description:</h4>
        {{ news.description }}
    </p>
{% endblock body %}
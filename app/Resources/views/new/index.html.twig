{% extends 'base.html.twig' %}
{% block title %}
    news
{% endblock %}
{% block body %}
    <h2 class="page-header">Latest News</h2>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th> <th>Name</th><th>Date</th><th></th>
        </tr>
        </thead>
        <tbody>
        {% for new in news %}
        <tr> <th scope="row">&#x2665</th> <td>{{ new.name }}</td> <td>{{ new.dueDate|date('F j, Y, g:i a') }}</td> <td>
                <a href="new/details/{{ new.id }}" class="btn btn-success">View</a>
                <a href="new/edit/{{ new.id }}" class="btn btn-default">Edit</a>
                <a href="new/delete/{{ new.id }}" class="btn btn-danger" id="delete">Delete</a>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

